<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication1"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Label x:Name="label" Content="User Name: " HorizontalAlignment="Left" Margin="25,118,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="usernameInput" HorizontalAlignment="Left" Height="23" Margin="105,121,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" MaxLength="15"/>
        <Label x:Name="label1" Content="Password: " HorizontalAlignment="Left" Margin="25,144,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.12,0.408"/>
        <PasswordBox x:Name="passwordInput" HorizontalAlignment="Left" Margin="105,150,0,0" VerticalAlignment="Top" Width="120"/>
        <ComboBox x:Name="serverCombo" HorizontalAlignment="Left" Margin="105,187,0,0" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="label2" Content="Server: " HorizontalAlignment="Left" Margin="25,183,0,0" VerticalAlignment="Top"/>
        <GroupBox x:Name="serverInfoBox" Header="GroupBox" HorizontalAlignment="Left" Margin="299,51,0,0" VerticalAlignment="Top" Height="218" Width="154"/>
        <Button x:Name="connectButton" Content="Connect" HorizontalAlignment="Left" Margin="25,235,0,0" VerticalAlignment="Top" Width="75" Click="connectButton_Click"/>
        <Button x:Name="quitButton" Content="Exit" HorizontalAlignment="Left" Margin="150,235,0,0" VerticalAlignment="Top" Width="75" Click="quitButton_Click"/>
    </Grid>
</Window>
